{
  "extends": [
    "github>jiyuujin/renovate-config"
  ],
  "automerge": true,
  "major": {
    "automerge": false
  },
  "docker": {
    "enabled": false
  },
  "docker-compose": {
    "enabled": false
  },
  "packageRules": [
    {
      "paths": [
        "/**"
      ],
      "labels": [
        "Package:Client"
      ]
    },
    {
      "paths": [
        "functions/**"
      ],
      "labels": [
        "Package:Functions"
      ]
    },
    {
      "paths": [
        "server/**"
      ],
      "labels": [
        "Package:Server"
      ]
    }
  ]
}
